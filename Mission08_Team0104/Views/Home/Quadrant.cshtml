@model List<Mission08_Team0104.Models.ToDoTask>
@{
    //Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Time Management Matrix</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .matrix-box {
            border: 2px solid black;
            padding: 20px;
            min-height: 200px;
        }
        .header, .side-label {
            font-weight: bold;
            text-align: center;
            background-color: lightgray;
            padding: 10px;
            border: 2px solid black;
        }
    </style>
</head>
<body>

<div class="container text-center mt-4">
    <h3 class="mb-4">Stephen Covey's Time Management Matrix</h3>

    <!-- Header Row -->
    <div class="row">
        <div class="col-2"></div>
        <div class="col-5 header">Urgent</div>
        <div class="col-5 header">Not Urgent</div>
    </div>

    <!-- Quadrants Row 1 -->
    <div class="row">
        <div class="col-2 side-label">Important</div>
        <div class="col-5 matrix-box">
            <h4>Quadrant 1</h4>
            @foreach (var task in Model.Where(t => t.Quandrant == "Quadrant 1"))
            {
                <div class="mb-2">
                    <p><strong>@task.TaskInfo</strong></p>
                    <p>Due: @task.DueDate.ToShortDateString()</p>
                    <a class="btn btn-info btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                </div>
            }
        </div>
        <div class="col-5 matrix-box">
            <h4>Quadrant 2</h4>
            @foreach (var task in Model.Where(t => t.Quandrant == "Quadrant 2"))
            {
                <div class="mb-2">
                    <p><strong>@task.TaskInfo</strong></p>
                    <p>Due: @task.DueDate.ToShortDateString()</p>
                    <a class="btn btn-info btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                </div>
            }
        </div>
    </div>

    <!-- Quadrants Row 2 -->
    <div class="row">
        <div class="col-2 side-label">Not Important</div>
        <div class="col-5 matrix-box">
            <h4>Quadrant 3</h4>
            @foreach (var task in Model.Where(t => t.Quandrant == "Quadrant 3"))
            {
                <div class="mb-2">
                    <p><strong>@task.TaskInfo</strong></p>
                    <p>Due: @task.DueDate.ToShortDateString()</p>
                    <a class="btn btn-info btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                </div>
            }
        </div>
        <div class="col-5 matrix-box">
            <h4>Quadrant 4</h4>
            @foreach (var task in Model.Where(t => t.Quandrant == "Quadrant 4"))
            {
                <div class="mb-2">
                    <p><strong>@task.TaskInfo</strong></p>
                    <p>Due: @task.DueDate.ToShortDateString()</p>
                    <a class="btn btn-info btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                </div>
            }
        </div>
    </div>
</div>

</body>
</html>
